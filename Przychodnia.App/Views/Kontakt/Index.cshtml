@model IEnumerable<Przychodnia.Data.Entities.Kontakt>

@{
    ViewData["Title"] = "Kontakt z nami";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="home-slider owl-carousel">
    <div class="slider-item bread-item" style="background-image: url('lib/layout/images/kontakt.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
    </div>
</section>
<section class="ftco-section">
    <div class="container">
        <div class="my-5">
            <h2 class="title" id="text-title">Kontakt</h2>
            <hr class="underline" />
        </div>
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            @foreach (var item in Model)
                            {
                                <div class="row col-md-12 single-item">
                                    <div class="list-group col-md-10">
                                        <a asp-action="Szczegoly" asp-route-id="@item.Id" class="list-group-item list-group-item-action flex-column align-items-start">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">
                                                    @Html.DisplayFor(modelItem => item.Uzytkownik.Imie) @Html.DisplayFor(modelItem => item.Uzytkownik.Nazwisko)
                                                </h5>
                                            </div>
                                            <small>Nr. telefonu: @Html.DisplayFor(modelItem => item.Telefon)</small>
                                        </a>
                                    </div>
                                    <div class="list-group col-md-2">
                                        <img class="rounded-circle" style="width:6em" src="https://cdn-icons-png.flaticon.com/512/147/147144.png"
                                             alt="...">
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </section>


@model Przychodnia.Data.Entities.Kontakt

@{
    ViewData["Title"] = "Szczegóły";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły</h1>

<div>
    <h4>Kontakt</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Uzytkownik) 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uzytkownik.Imie)
            @Html.DisplayFor(model => model.Uzytkownik.Nazwisko)
            @Html.DisplayFor(model => model.Uzytkownik.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adres)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adres.Miejscowosc)
            @Html.DisplayFor(model => model.Adres.KodPocztowy)
            @Html.DisplayFor(model => model.Adres.Ulica)
            @Html.DisplayFor(model => model.Adres.NumerDomu)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefon)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Aktywny)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aktywny)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edycja" asp-route-id="@Model.Id">Edycja</a> |
    <a asp-action="Index">Powrót</a>
</div>

@model Przychodnia.Data.Entities.Parametr

@{
    ViewData["Title"] = "Edytuj parametr";
}

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <a asp-action="Index" class="btn btn-warning">Powrót</a>
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Aktywny" /> @Html.DisplayNameFor(model => model.Aktywny)
                </label>
            </div>
            @*<div class="form-group">
            <label asp-for="Nazwa" class="control-label"></label>
            <input asp-for="Nazwa" class="form-control" />
            <span asp-validation-for="Nazwa" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <label asp-for="Pozycja" class="control-label"></label>
                <input asp-for="Pozycja" class="form-control" />
                <span asp-validation-for="Pozycja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wartosc" class="control-label"></label>
                <input asp-for="Wartosc" class="form-control" />
                <span asp-validation-for="Wartosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="content">Opis</label>
                <textarea asp-for="Opis" id="content"></textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Aktywny"  /> @Html.DisplayNameFor(model => model.Aktywny)
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

            document.addEventListener('DOMContentLoaded',() => {
                        var input = document.getElementsByClassName("custom-file-input")[0];
                        var label = document.getElementsByClassName("custom-file-label")[0];
                        input.onchange = (event) => {
                            label.innerHTML = event.target.files[0].name;
                        }

            });
    </script>
    <script>
              tinymce.init({
                              selector: 'textarea',
                              menubar:false,
                              statusbar: false,
                              language: 'pl'
                            });
    </script>

}

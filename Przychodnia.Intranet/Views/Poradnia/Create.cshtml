@model Przychodnia.Intranet.ViewModel.PoradniaViewModel

@{
    ViewData["Title"] = "Dodaj poradnie";
 }
<h4 class="page-title">Poradnia</h4>
<hr />
<form enctype="multipart/form-data" asp-action="Create">
    <div class="row">

        <div class="col-lg-8 offset-lg-2">
            <div class="form-group">
                <a asp-action="Index" class="btn btn-warning">Powrót</a>
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input " asp-for="Aktywna" checked/> @Html.DisplayNameFor(model => model.Aktywna)
                </label>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Nazwa" class="control-label"></label>
                        <input asp-for="Nazwa" class="form-control" />
                        <span asp-validation-for="Nazwa" class="text-danger"></span>
                    </div>
                </div>
            </div>
             <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Foto" class="control-label ">Zdjęcie</label>
                        <div class="custom-file">
                            <input asp-for="Foto" class="custom-file-input" id="customFileImage" accept="image/*" multiple />
                            <label class="custom-file-label" for="customFileImage">Wybierz pliki..</label>
                        </div>
                        <span asp-validation-for="Foto" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Opis" class="control-label">Opis poradni</label>
                    @Html.TextAreaFor(model => model.Opis)
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
            </div>

        </div>
    </div>

</form>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
    <script>
            document.addEventListener('DOMContentLoaded', () => {
                var input = document.getElementsByClassName("custom-file-input")[0];
                var label = document.getElementsByClassName("custom-file-label")[0];
                input.onchange = (event) => {
                    label.innerHTML = event.target.files[0].name;
                }

            });
        </script>
    <script>
        tinymce.init({
                        selector: 'textarea',
                        menubar:false,
                        statusbar: false,
                        language: 'pl'
                      });
    </script>
}

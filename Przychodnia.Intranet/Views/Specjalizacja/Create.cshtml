@model Przychodnia.Data.Entities.Specjalizacja

@{
    ViewData["Title"] = "Dodaj Specjalizacje";
}
<h4>Specjalizacja</h4>
<hr />
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-warning">Powrót</a>
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Nazwa" class="control-label"></label>
                        <input asp-for="Nazwa" class="form-control" />
                        <span asp-validation-for="Nazwa" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    <div class="form-group">
                        <label asp-for="Opis" class="control-label">Treść</label>
                        @Html.TextAreaFor(model => model.Opis)
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Aktywna" checked/> @Html.DisplayNameFor(model => model.Aktywna)
                    </label>
                </div>
            </div>

            @*
        <label class="form-check-label">
        <input class="form-check-input" asp-for="Aktywna" /> @Html.DisplayNameFor(model => model.Aktywna)
        </label>
        </div>*@
        </form>
    </div>
</div>

@section Scripts {
        @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
    <script>
          tinymce.init({
                          selector: 'textarea',
                          menubar:false,
                          statusbar: false,
                          language: 'pl'
                        });
    </script>
    }

@model Przychodnia.Data.Entities.Strona

@{
    ViewData["Title"] = "Dodaj strone";
}

<h4>Strona</h4>
<hr />
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-warning">Powrót</a>
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LinkTytul" class="control-label"></label>
                        <input asp-for="LinkTytul" class="form-control" />
                        <span asp-validation-for="LinkTytul" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Tytul" class="control-label"></label>
                        <input asp-for="Tytul" class="form-control" />
                        <span asp-validation-for="Tytul" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Tresc" class="control-label">Treść</label>
                        @Html.TextAreaFor(model => model.Tresc)
                        <span asp-validation-for="Tresc" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Pozycja" class="control-label"></label>
                        <input asp-for="Pozycja" class="form-control" />
                        <span asp-validation-for="Pozycja" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">

                    <div class="form-group">

                        <label asp-for="Ikona" class="control-label"></label>
                        <select asp-for="IkonaId" class="form-control" style="font-family: 'FontAwesome', 'Second Font name'">

                            <option value="1">far fa-heart, &#xf08a;</option>
                            <option value="2">far fa-calendar, &#xf133;</option>
                            <option value="3">far fa-newspaper, &#xf1ea;</option>
                            <option value="4">far fa-envelope, &#xf2b7;</option>
                            <option value="5">far fa-id-card, &#xf2c3;</option>
                        </select>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6 col-md-6">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            @Html.RadioButtonFor(model => model.CzyWOknie, value: true) W tym samym oknie
                            @Html.RadioButtonFor(model => model.CzyWOknie, value: false) W nowym oknie
                        </label>
                    </div>
                </div>
                <div class="col-6 col-md-6">
                    <div class="form-group">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="CzyIkona" /> @Html.DisplayNameFor(model => model.CzyIkona)
                        </label>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
 }

<script>
    tinymce.init({
                    selector: 'textarea',
                    menubar:false,
                    statusbar: false,
                    language: 'pl'
                  });
</script>
}